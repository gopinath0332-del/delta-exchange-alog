[Unit]
Description=Delta Exchange Trading Bot - PIUSD Donchian Channel (1H Heikin Ashi)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/Apps/delta-exchange-alog
# Runs strategy ID 11: PIUSD Donchian Channel, 1H Heikin Ashi, 5x leverage, $50 target margin
ExecStart=/home/pi/Apps/delta-exchange-alog/venv/bin/python3 -u /home/pi/Apps/delta-exchange-alog/run_terminal.py --strategy 11 --non-interactive
Restart=on-failure
RestartSec=60
EnvironmentFile=/home/pi/Apps/delta-exchange-alog/config/.env

# Logging â€” stdout goes to pi.log, stderr (crashes/tracebacks) to pi.error.log
StandardOutput=append:/home/pi/Apps/delta-exchange-alog/logs/pi.log
StandardError=append:/home/pi/Apps/delta-exchange-alog/logs/pi.error.log

[Install]
WantedBy=multi-user.target
