# Delta Exchange API Configuration
# Get your API keys from: https://testnet.delta.exchange/app/account/manageapikeys
DELTA_API_KEY=your_api_key_here
DELTA_API_SECRET=your_api_secret_here

# Environment: testnet or production
# Testnet URL: https://cdn-ind.testnet.deltaex.org
# Production URL: https://api.india.delta.exchange
DELTA_ENVIRONMENT=testnet
DELTA_BASE_URL=https://cdn-ind.testnet.deltaex.org

# Discord Notifications
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_ENABLED=true

# Email Notifications
EMAIL_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USE_TLS=true
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Database Configuration
DB_PATH=data/trading.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Data Fetching
DEFAULT_HISTORICAL_DAYS=30

# Order Placement
ENABLE_ORDER_PLACEMENT=false

# Symbol Specific Order Settings

# XRP
ORDER_SIZE_XRP=10
LEVERAGE_XRP=5

# BTC
ORDER_SIZE_BTC=1
LEVERAGE_BTC=5

# ETH
ORDER_SIZE_ETH=1
LEVERAGE_ETH=5
